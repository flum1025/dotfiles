" vimrc
au BufRead,BufNewFile *.vimrc set ft=vim

" pryrc
au BufRead,BufNewFile .pryrc set ft=ruby

" zsh
au BufRead,BufNewFile *.zsh set ft=zsh

" tmux
au BufRead,BufNewFile .tmux.conf set ft=tmux

" ejs
au BufRead,BufNewFile *.ejs set ft=html

" vue
au BufRead,BufNewFile *.vue set ft=html

" php
au BufRead,BufNewFile *.php set ft=html shiftwidth=4
